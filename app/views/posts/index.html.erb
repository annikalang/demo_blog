<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1495639004258-10f5563eb702?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80);">
  <div class="container">
    <h1>Blog Index</h1>
    <p>Share your thoughts.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>

<div class="container">
  <% @posts.each do |post| %>
    <div class="card-category" >
      <div class="card-content">
        <h3><%= link_to post.title, post %></h3>
        <p><%= post.content %></p>
      </div>
    </div>
  <% end %>
</div>
